<div class="row">
  <div class="col-md-10">
    <h2>Departments</h2>
  </div>
 <% if current_user.admin? %>
  <div class="col-md-2">
    <a id="newDepartment" class="btn btn-primary float-right" href="<%= new_department_path %>" role="button">Create</a>
  </div>
  <% end %>
</div>

<br/>

<ul class="list-group">
  <% @departments.each do |department| %>
    <li class="list-group-item"><a href="<%=sections_path(department_id: department.id)%>"><%= department.name %></a></li>
  <% end %>
</ul>

