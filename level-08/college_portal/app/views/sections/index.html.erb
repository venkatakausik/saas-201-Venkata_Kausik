<div class="row">
  <div class="col-md-10">
    <h2>Sections</h2>
  </div>
 <% if current_user.admin? %>
  <div class="col-md-2">
    <a class="btn btn-primary float-right" href="<%= new_section_path %>" role="button">Create</a>
  </div>
 <% end %>
</div>

<br/>

<ul class="list-group">
  <% @sections.each do |section| %>
    <li class="list-group-item"><a href="<%=students_path(section_id: section.id) %>"><%= section.name %></a></li>
  <% end %>
</ul>


